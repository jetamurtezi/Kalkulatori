@model Kalkulatori.Models.KalkulatoriPension


<h1 class="display-4">Kalkulatori per pension</h1>
<form asp-action="Index" method="post">
	<div>
		<label>Emri</label>
		<input type="text" asp-for="Emri" class="form-control" />
		<span asp-validation-for="Emri" class="text-danger"></span>
	</div>
	<div>
		<label class="mt-4">Mbiemri</label>
		<input type="text" asp-for="Mbiemri" class="form-control" />
		<span asp-validation-for="Mbiemri" class="text-danger"></span>
	</div>
	<div>
		<label class="mt-4">Data e lindjes</label>
		<input type="date" asp-for="DataELindjes" class="form-control" />
		<span asp-validation-for="DataELindjes" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary form-control mt-5">Llogarit</button>

</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

